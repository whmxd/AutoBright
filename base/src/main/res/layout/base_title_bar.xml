<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/base_head_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_FF"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/base_title_left_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:paddingStart="13dp"
            android:paddingTop="8dp"
            android:paddingEnd="13dp"
            android:paddingBottom="8dp"
            android:scaleType="centerInside"
            android:src="@mipmap/base_icon_back_black" />

        <TextView
            android:id="@+id/base_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:textColor="@color/color_33"
            android:visibility="gone"
            android:text="取消"/>
        <TextView
            android:id="@+id/base_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:maxEms="12"
            android:maxLines="1"
            android:text="标题"
            android:textColor="@color/color_33"
            android:background="@color/transparent"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/base_title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:padding="5dp"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>
</LinearLayout>
